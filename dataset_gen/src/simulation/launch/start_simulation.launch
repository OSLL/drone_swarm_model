<launch>
    <arg name="world_name" default="actually_empty_world" />
    <arg name="count" default="1"/>
    <arg name="model_name" default="camera.urdf.xacro"/>
    <arg name="robot_name" default="drone"/>
    <arg name="x"          default="5" />
    <arg name="y"          default="5" />
    <arg name="z"          default="6" />
    <arg name="yaw"        default="0"/>
    <arg name="pitch"      default="0"/>
    <arg name="roll"       default="0"/>

    <include file="$(find simulation)/launch/create_simulation.launch">
        <arg name="world" value="$(arg world_name)" />
    </include>

    <include file="$(find camera_controls)/launch/spawn_swarm.launch">
        <arg name="count"      value="$(arg count)"/>
        <arg name="model_name" value="$(arg model_name)"/>
        <arg name="robot_name" value="$(arg robot_name)"/>
        <arg name="x"          value="$(arg x)" />
        <arg name="y"          value="$(arg y)" />
        <arg name="z"          value="$(arg z)" />
        <arg name="yaw"        value="$(arg yaw)"/>
        <arg name="pitch"      value="$(arg pitch)"/>
        <arg name="roll"       value="$(arg roll)"/>
    </include>

    <node name="controller" pkg="camera_controls" type="controller.py" output="screen" />

</launch>
